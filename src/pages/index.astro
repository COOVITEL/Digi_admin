---
import Graffic from '@/components/graficosIndex/GrafficSucursales';
import GrafficTypes from '@/components/graficosIndex/GrafficTypes'
import AllTime from '@/components/graficosIndex/GrafficTime'
import Layout from '../layouts/Layout.astro';
import GrafficScores from '@/components/graficosIndex/GrafficScores';
import GrafficTypesScores from '@/components/graficosIndex/GrafficTypesScores';
---

<Layout title="Admin Digiturno">
    <div class="flex flex-col p-5 items-center">
        <h1 class="text-white text-3xl p-5 border-b-[3px]">Datos y Estadisticas DigiTurno, Bienvenido!</h1>
        <p class="text-white p-6">
            En esta pagina podras encontrar estadisticas,
            graficas y analisis de los datos recolectados por <strong>Coovitel</strong> en sus diferentes sucursales.
        </p>
        <div class="flex flex-col items-center gap-5 m-6">
            <Graffic client:only />
            <GrafficTypes client:only />
            <GrafficScores client:only />
            <AllTime client:only />
            <GrafficTypesScores client:only />
        </div>
    </div>
</Layout>

